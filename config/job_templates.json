{
  "version": "1.0",
  "job_templates": [
    {
      "id": "JT-FIN-01",
      "title": "Finance analysis.run (offline)",
      "role": "finance",
      "steps": [
        {
          "tool_action": "analysis.run",
          "requires_approval": true,
          "params_schema": {
            "expression": {"type": "string", "description": "Arithmetic expression"}
          }
        }
      ],
      "expected_outputs": ["analysis_result"]
    },
    {
      "id": "JT-PROD-01",
      "title": "Spec draft â†’ Issue draft",
      "role": "product",
      "steps": [
        {
          "tool_action": "draft.spec",
          "requires_approval": true,
          "params_schema": {
            "title": {"type": "string"},
            "problem": {"type": "string"}
          }
        },
        {
          "tool_action": "draft.issue",
          "requires_approval": true,
          "params_schema": {
            "title": {"type": "string"},
            "description": {"type": "string"}
          }
        }
      ],
      "expected_outputs": ["spec_draft", "issue_draft"]
    },
    {
      "id": "JT-GROW-01",
      "title": "Growth outreach draft",
      "role": "growth",
      "steps": [
        {
          "tool_action": "draft.outreach",
          "requires_approval": true,
          "params_schema": {
            "to": {"type": "string"},
            "subject": {"type": "string"},
            "context": {"type": "string"}
          }
        }
      ],
      "expected_outputs": ["outreach_draft"]
    },
    {
      "id": "JT-OPS-01",
      "title": "Ops status/report (read_only.query)",
      "role": "ops",
      "steps": [
        {
          "tool_action": "read_only.query",
          "requires_approval": false,
          "params_schema": {
            "query": {"type": "string"}
          }
        }
      ],
      "expected_outputs": ["report"]
    },
    {
      "id": "JT-OPS-02",
      "title": "Ops Daily Brief (read_only.query: ops.daily_brief)",
      "role": "ops",
      "steps": [
        {
          "tool_action": "read_only.query",
          "requires_approval": false,
          "params_schema": {
            "query": {"type": "string", "default": "ops.daily_brief"}
          }
        }
      ],
      "expected_outputs": ["daily_brief"]
    },
    {
      "id": "JT-OPS-03",
      "title": "Snapshot Health Check (read_only.query: ops.snapshot_health)",
      "role": "ops",
      "steps": [
        {
          "tool_action": "read_only.query",
          "requires_approval": false,
          "params_schema": {
            "query": {"type": "string", "default": "ops.snapshot_health"}
          }
        }
      ],
      "expected_outputs": ["snapshot_health"]
    }
  ]
}
