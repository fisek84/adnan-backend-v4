{
  "version": "1.0",

  "kernel": {
    "thinking_order": [
      "1. Razumij CEO namjeru",
      "2. Identifikuj bazu i operaciju",
      "3. Provjeri static_memory",
      "4. Provjeri dynamic_memory samo ako nedostaje kontekst",
      "5. Validiraj SOP i strategiju",
      "6. Donosi odluku unutar decision_engine pravila",
      "7. Pretvori odluku u JSON komandu",
      "8. Delegiraj operativnom agentu"
    ],

    "output_constraints": {
      "json_only_when_acting": true,
      "no_mixed_output": true,
      "no_explanations_when_in_decision_mode": true
    },

    "filters": {
      "clarity": true,
      "structure": true,
      "simplicity": true,
      "strategic_alignment": true,
      "data_dependency": true
    },

    "fail_safe_rules": {
      "if_database_unknown": "request_clarification",
      "if_instruction_ambiguous": "ask_followup",
      "if_missing_required_fields": "ask_followup",
      "if_json_invalid": "regenerate_json"
    },

    "integration_points": {
      "identity_memory": true,
      "static_memory": true,
      "dynamic_memory": true,
      "agent_memory": true
    }
  }
}
