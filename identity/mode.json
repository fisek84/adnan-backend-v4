import os
import json
from datetime import datetime


def load_json_file(path: str):
    if not os.path.exists(path):
        raise FileNotFoundError(f"Mode file not found: {path}")

    # UTF-8 with BOM safe loader
    with open(path, "r", encoding="utf-8-sig") as f:
        return json.load(f)


def resolve_path(filename: str) -> str:
    """
    Correct path resolution for:
    - Local dev
    - Docker
    - Render
    """
    current_dir = os.path.dirname(os.path.abspath(__file__))
    project_root = os.path.abspath(os.path.join(current_dir, ".."))
    identity_dir = os.path.join(project_root, "identity")
    return os.path.join(identity_dir, filename)


# ============================================================
# LOAD FULL MODE.JSON
# ============================================================

def load_mode():
    """
    Loads the new standardized mode.json file.
    """
    path = resolve_path("mode.json")
    return load_json_file(path)


# ============================================================
# RUNTIME MODE (SIMPLE SAFE VERSION)
# ============================================================

def get_adnan_mode():
    """
    Minimal runtime-safe mode information.
    """
    mode_data = load_mode()

    return {
        "active_mode": mode_data.get("default_mode", "operational"),
        "modes_available": list(mode_data.get("modes", {}).keys()),
        "timestamp": datetime.utcnow().isoformat()
    }
